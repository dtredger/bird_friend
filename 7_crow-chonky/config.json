{
  "_comment": "Configuration file for Prop-Maker Feather Crow Bird",
  "_description": "Modify these settings to customize your bird's behavior. Save and reset board for changes to take effect.",
  
  "mode": "clock",
  "debug": false,
  "interval_minutes": 60,
  "use_deep_sleep": false,

  "battery": {
    "enabled": false
  },

  "button": {
    "enabled": true,
    "pin": "D6",
    "long_press_ms": 1500,
    "_note": "Global control: Long press = cycle modes, Short press = mode action"
  },
  
  "pins": {
    "led": "A0",
    "light_sensor": "A1", 
    "battery": "",
    "_note": "Servo and audio use built-in hardware - no pin config needed"
  },
  
  "audio": {
    "directory": "audio",
    "sample_rate": 11000,
    "volume": 0.6,
    "_volume_range": "0.0 to 1.0"
  },
  
  "sensors": {
    "light_threshold": 1000,
    "_threshold_note": "0-65535, higher = need more light to activate. with 2000ohms resistance, very dark gives ~300, light around 6000"
  },
  
  "leds": {
    "max_brightness": 0.8,
    "fade_duration": 1.0,
    "flash_duration": 0.3,
    "_brightness_range": "0.0 to 1.0"
  },
  
  "servo": {
    "speed": 0.02,
    "pause": 0.5,
    "_speed_note": "Delay between steps in seconds - lower = faster"
  },
  
  "clock": {
    "chime_volume": 0.7,
    "quiet_hours_start": 23,
    "quiet_hours_end": 7,
    "button_debounce": 0.2,
    "_note": "Clock mode settings - chimes 1-12 times per hour"
  },
  
  "behavior": {
    "night_flash_count": 2,
    "action_flash_count": 3
  },
  
  "_available_modes": [
    "default",
    "clock", 
    "debug",
    "button_test",
    "battery_monitor"
  ],
  
  "_presets": {
    "_description": "Copy these values to main config for different behaviors",
    
    "clock_mode": {
      "mode": "clock",
      "leds": { "max_brightness": 0.9 },
      "audio": { "volume": 0.7 },
      "clock": { "chime_volume": 0.8 }
    },
    
    "quiet_clock": {
      "mode": "clock", 
      "leds": { "max_brightness": 0.4 },
      "audio": { "volume": 0.4 },
      "clock": { "chime_volume": 0.5 }
    },
    
    "quiet_mode": {
      "leds": { "max_brightness": 0.3 },
      "audio": { "volume": 0.4 },
      "interval_minutes": 120,
      "behavior": { "night_flash_count": 1 }
    },
    
    "active_mode": {
      "leds": { "max_brightness": 1.0 },
      "audio": { "volume": 0.9 },
      "interval_minutes": 15,
      "behavior": { "night_flash_count": 3 }
    },
    
    "testing_mode": {
      "debug": true,
      "interval_minutes": 1,
      "leds": { "max_brightness": 0.5 },
      "audio": { "volume": 0.5 }
    }
  }
}